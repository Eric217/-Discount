<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="cn.omsfuk.discount.dao.GoodsDao">

    <resultMap id="goods" type="cn.omsfuk.discount.vo.GoodsVo">
        <id column="id" property="id"/>
        <result column="type" property="type"/>
        <result column="title" property="title"/>
        <result column="description" property="description"/>
        <result column="loc0" property="loc0"/>
        <result column="loc1" property="loc1"/>
        <result column="loc2" property="loc2"/>
        <result column="longitude" property="longitude"/>
        <result column="latitude" property="latitude"/>
        <result column="date" property="date"/>
        <result column="deadline" property="deadline"/>
        <result column="is_valid" property="isValid"/>
        <result column="pic" property="picStr"/>
        <association property="user" column="user_id" select="cn.omsfuk.discount.dao.UserDao.getUserById"/>
    </resultMap>

    <select id="getGoodsByFavorite" parameterType="int" resultMap="goods">
        SELECT *
        FROM goods
        WHERE id in (SELECT goods_id FROM favorite WHERE user_id = #{user_id})
    </select>

    <insert id="insertGoods">
        INSERT goods(`type`, title, description, loc0, loc1, loc2, longitude, latitude,
        `date`, deadline, is_valid, user_id, pic)
        VALUES (#{type}, #{title}, #{description}, #{loc0}, #{loc1}, #{loc2},
        #{longitude}, #{latitude}, current_timestamp(), #{deadline}, 1, #{userId}, #{pic})
    </insert>

    <select id="getGoods" resultMap="goods">
        SELECT *
        FROM goods
        WHERE
        <if test="id != null">
            id = #{id} and
        </if>
        <if test="userId != null">
            user_id = #{userId} and
        </if>
        <if test="isValid != null">
            is_valid = #{isValid} and
        </if>

        <choose>
            <when test="loc2 != null">
                loc0 = #{loc0} and loc1 = #{loc1} and loc2 =#{loc2}
            </when>
            <otherwise>
                <choose>
                    <when test="loc1 != null">
                        loc0 = #{loc0} and loc1 = #{loc1}
                    </when>
                    <otherwise>
                        <choose>
                            <when test="loc0 != null">
                                loc0 = #{loc0}
                            </when>
                        </choose>
                    </otherwise>
                </choose>
            </otherwise>
        </choose>
        and 1 = 1
        LIMIT #{begin}, #{rows}
    </select>
    <select id="getGoodsCount" resultType="java.lang.Integer">
        SELECT count(*)
        FROM goods
        WHERE
        <if test="id != null">
            id = #{id} and
        </if>
        <if test="userId != null">
            user_id = #{userId} and
        </if>
        <if test="isValid != null">
            is_valid = #{isValid} and
        </if>

        <choose>
            <when test="loc2 != null">
                loc0 = #{loc0} and loc1 = #{loc1} and loc2 =#{loc2}
            </when>
            <otherwise>
                <choose>
                    <when test="loc1 != null">
                        loc0 = #{loc0} and loc1 = #{loc1}
                    </when>
                    <otherwise>
                        <choose>
                            <when test="loc0 != null">
                                loc0 = #{loc0}
                            </when>
                        </choose>
                    </otherwise>
                </choose>
            </otherwise>
        </choose>
        and 1 = 1
    </select>

</mapper>